{% extends 'base.html.twig' %}

{% block title %}Liste des paticipants{% endblock %}

{% block body %}
    <h1>Liste des participants</h1>
    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>prix</th>
            <th></th>
        </tr>

        {% for p in participant %}
            <tr>
                <td>{{ p.nom }}</td>
                <td>{{ p.prenom }}</td>
                <td>{{ p.prix }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path("participant_modifier",{"id":p.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path("participant_supprimer",{"id":p.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a class="btn btn-primary pull-right" href="{{ path ("participant_ajouter") }}">Ajouter un participant</a>
{% endblock %}
